+cmake_minimum_required(VERSION 2.8 FATAL_ERROR)
+project(lua C)
+set(CMAKE_C_FLAGS "-O2 -Wall")
+
+set(LPEG_SOURCE
+../lpeg-0_12/lpcap.c
+../lpeg-0_12/lpcode.c
+../lpeg-0_12/lptree.c
