# hekad - http://hekad.readthedocs.org/en/latest/ -- The hekad daemon is the core component of the heka project
#
# Configure hekad in /etc/heka/conf.d/ see examples in /usr/share/heka/examples

start on runlevel [2345]

respawn

pre-start script
  [ -d /var/run/hekad/seekjournals/ ] || mkdir -p /var/run/hekad/seekjournals/
end script

setuid heka
setgid heka

exec /usr/bin/hekad -config=/etc/heka/conf.d/ >> /var/log/hekad.log 2>&1
